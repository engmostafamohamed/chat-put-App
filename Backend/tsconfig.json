{
  "compilerOptions": {
   
    "target": "es2017",                                  
    "module": "commonjs",                                
    "lib": ["ES6", "DOM"],
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "allowJs": true,
    "outDir": "./dist",
    "strict": true, 
    "noImplicitAny": true,                                 
    "skipLibCheck": true,   
  },
  "exclude": ["node_modules", "./dist", "spec"]
}